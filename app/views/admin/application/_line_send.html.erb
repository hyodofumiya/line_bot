<div class="field-unit" id="field-unit--line_send">
  <div class="field-unit__label">  
    <%= label_tag :line_send, "LINEに通知"%>
  </div>
  <div class="field-unit__field">
    <%= check_box_tag :line_send, true, false, {class: "line_send", id: "line_send", autocomplete: "off"} %>
  </div>
</div>
<div class="field-unit hidden_zone" id="field-unit--line_send__all">
  <% if action_name == "index" and resource_name == :user %>
    <div class="field-unit__label">  
      <%= label_tag :line_send, "全社員に送信"%>
    </div>
    <div class="field-unit__field">
      <%= check_box_tag :all_user_line_send, true, false, {class: "all_user_line_send", id: "all_user_line_send"} %>
    </div>
  <% end %>
</div>
<div class="field-unit hidden_zone" id="field-unit--line_message">
  <div class="field-unit__label field-unit--required">  
    <%= label_tag "line_message", "LINEメッセージ" %>
  </div>
  <div class="field-unit__field">
    <%= text_field_tag "line_message", "#{@line_default_message}" ,{class: "line_message", id: "line_message", disabled: "disabled"} %>
  </div>
</div>